<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="datasource" class="org.apache.commons.dbcp2.BasicDataSource"><!--org.springframework.jdbc.datasource.DriverManagerDataSource-->
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"></property>
        <property name="url" value="jdbc:oracle:thin:@//10.248.8.52:1521/orcl"></property>
        <property name="username" value="u20142005034"></property>
        <property name="password" value="111111"></property>

        <!--org.apache.commons.dbcp2.BasicDataSource专有属性-->
        <property name="initialSize" value="2"/>
        <property name="maxTotal" value="5"/>
    </bean>
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">
                    org.hibernate.dialect.Oracle10gDialect
                </prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>

        </property>

        <property name="mappingResources">

            <list>

                <value>com/bean/User.hbm.xml</value>
                <value>com/bean/Journal.hbm.xml</value>
                <value>com/bean/Article.hbm.xml</value>
                <value>com/bean/Chapter.hbm.xml</value>
                <value>com/bean/Paragraph.hbm.xml</value>

            </list>

        </property>
    </bean>

    <bean id="userDAO" class="com.dao.impl.UserDAOImpl" scope="singleton">
        <property name="sessionFactory">
            <ref bean="sessionFactory"></ref>
        </property>
    </bean>

    <bean id="userService" class="com.service.impl.UserServiceImpl">
        <property name="userDao">
            <ref bean="userDAO"></ref>
        </property>
    </bean>


    <bean id="journalDAO" class="com.dao.impl.JournalDAOImpl_Oracle" scope="singleton">
        <property name="sessionFactory">
            <ref bean="sessionFactory"></ref>
        </property>
    </bean>

    <bean id="journalService" class="com.service.impl.JournalServiceImpl">
        <property name="journalDAO">
            <ref bean="journalDAO"></ref>
        </property>
    </bean>
